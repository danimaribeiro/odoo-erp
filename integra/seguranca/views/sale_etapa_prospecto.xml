<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="sale_etapa_prospecto_tree">
            <field name="name">sale.etapa.prospecto.tree</field>
            <field name="model">sale.etapa</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Etapas do prospecto">
                    <field name="tipo" invisible="1" />
                    <field name="codigo" invisible="1" />
                    <field name="nome" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_etapa_prospecto_form">
            <field name="name">sale.etapa.prospecto.form</field>
            <field name="model">sale.etapa</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Etapa do prospecto">
                    <group col="4" colspan="4">
                        <field name="tipo" invisible="1" />
                        <field name="codigo" readonly="1" invisible="1" />
                        <field name="nome" required="1"/>
                    </group>
                    <separator string="Etapas seguintes" colspan="4" />
                    <field name="etapa_seguinte_ids" nolabel="1" colspan="4" domain="['|', ('tipo', '=', tipo), ('id', '=', 2)]"/>
                </form>
            </field>
        </record>

         <record id="sale_etapa_prospecto_search" model="ir.ui.view">
            <field name="name">sale.etapa.prospecto.search</field>
            <field name="model">sale.etapa</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Etapas do prospecto">
                    <field name="codigo" />
                    <field name="nome" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sale_etapa_prospecto_acao">
            <field name="name">Etapas do prospecto</field>
            <field name="res_model">sale.etapa</field>
            <field name="view_type">form</field>
            <field name="domain">[('tipo', '=', 'P')]</field>
            <field name="context">{'default_tipo': 'P'}</field>
            <field name="view_id" ref="sale_etapa_prospecto_tree" />
            <field name="search_view_id" ref="sale_etapa_prospecto_search"/>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            action="sale_etapa_prospecto_acao"
            id="menu_sale_etapa_prospecto"
            name="Etapas do prospecto"
            parent="base.menu_sale_config_sales"
            sequence="30" />

        <record model="ir.actions.act_window.view" id="sale_etapa_prospecto_form_acao">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_etapa_prospecto_form"/>
            <field name="act_window_id" ref="sale_etapa_prospecto_acao"/>
        </record>

        <record model="ir.actions.act_window.view" id="sale_etapa_prospecto_tree_acao">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sale_etapa_prospecto_tree"/>
            <field name="act_window_id" ref="sale_etapa_prospecto_acao"/>
        </record>

    </data>
</openerp>
