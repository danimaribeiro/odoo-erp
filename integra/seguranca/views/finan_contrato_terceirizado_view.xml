                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Faturamento">
                            <group colspan="10" col="4">
                                <group colspan="4" col="2">
                                    <field name="nf_sem_boleto" colspan="2" />
                                </group>
                                <separator string="Município do fato gerador (para serviços)" colspan="4" />
                                <field name="municipio_id" colspan="4" />
