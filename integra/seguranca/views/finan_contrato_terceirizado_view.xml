                            <group colspan="4">
                                <field name="ativo" colspan="2"  required="1" />
                                <field name="suspenso" colspan="2"  required="1" />
                            </group>
                        </group>
                        <field name="data_assinatura" colspan="2" required="1" on_change="onchange_data_assinatura(data_assinatura, duracao)" />
