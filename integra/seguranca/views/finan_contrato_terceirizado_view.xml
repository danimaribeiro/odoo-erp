                            <separator string="Motivo do distrato" colspan="4" />
                            <field name="motivo_distrato_id" attrs="{'required': [('data_distrato', '!=', False)]}" nolabel="1" />
                        </group>
                    </group>
<!--                    <group string="Ações">
